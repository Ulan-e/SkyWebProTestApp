<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- стиль для кнопки войти -->
    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_10dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_20dp</item>
        <item name="android:layout_marginRight">@dimen/margin_20dp</item>
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <!-- стиль для текста автора -->
    <style name="AuthorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:paddingBottom">@dimen/margin_10dp</item>
    </style>
</resources>